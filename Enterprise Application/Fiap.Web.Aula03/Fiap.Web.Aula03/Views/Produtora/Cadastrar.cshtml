@model Produtora
@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar nova Produtora</h1>

<a asp-action="index">Produtoras</a>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

<form asp-action="cadastrar">
    <partial name="_Form" />
    <button class="btn btn-outline-primary">Cadastrar</button>
</form>