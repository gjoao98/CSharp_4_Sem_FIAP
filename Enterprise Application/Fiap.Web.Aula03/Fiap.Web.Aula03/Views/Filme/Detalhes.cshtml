@model Filme

@{
    ViewData["Title"] = "Detalhes";
}

<h1>@Model.Titulo</h1>

<table class="table table-striped">
    <tr>
        <th>Sinopse</th>
        <th>Duração</th>
        <th>Bilheteria</th>
        <th>Data Lançamento</th>
        <th>Categoria</th>
        <th>Produtora</th>
        <th>Disponível</th>
    </tr>

    <tr>
        <td>@Model.Sinopse</td>
        <td>@Model.Duracao</td>
        <td>@Model.Bilheteria</td>
        <td>@Model.DataLancamento.ToShortDateString()</td>
        <td>@Model.Categoria</td>
        <td>@Model.Produtora.Nome</td>
        <td>@(Model.Disponivel ? "Sim" : "Não")</td>
    </tr>
</table>


<h2>Atores</h2>

<table class="table table-striped">
    <tr>
        <th>Nome</th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.atores)
    {
        <tr>
            <td>@item.Nome</td>
            <td>
                <a asp-action="" asp-route-id="@item.AtorId" class="btn btn-sm btn-outline-primary">Adicionar</a>
            </td>
        </tr>
    }
</table>